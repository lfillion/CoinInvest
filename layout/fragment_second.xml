<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_GraphFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="TAG_SecondFragment"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="198dp">
        <Button
            android:id="@+id/id_BackViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="570dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/id_2ndLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:scaleType="fitEnd"
                app:srcCompat="@android:drawable/btn_star_big_off" />

            <TextView
                android:id="@+id/id_2ndCoinRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="40dp"
                android:text="Rank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_2ndCoinSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="60dp"
                android:text="Symbol"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_2ndCoinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:text="Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_2ndCoinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:text="Value"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="400dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="47dp"
            tools:visibility="visible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>